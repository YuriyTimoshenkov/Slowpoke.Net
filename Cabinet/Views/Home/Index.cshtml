@{
    ViewBag.Title = "Home Page";
}



@if (Request.IsAuthenticated)
{
    <div class="row">
        <div class="col-md-4">
            <h2>Hello player <b>@ViewBag.User.UserName</b></h2>
            <a type="button" class="btn btn-default" aria-label="Left Align" href="/Home/Play">Play</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <h2>My account balance: @ViewBag.MyAccountBalance</h2>
        </div>
    </div>
    <div class="row">
        @using (Html.BeginForm("BuyGold", "Home", FormMethod.Post))
        {
            <div class="form-group">
                @Html.Label("Amount", new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBox("Amount", 0, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Buy" class="btn btn-default" />
                    </div>
            </div>
        }
    </div>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <h2>Welcome to slowpoke.net game.</h2>
        </div>
    </div>
}
